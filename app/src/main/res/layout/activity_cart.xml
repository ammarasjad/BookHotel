<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/booking_background"
    tools:context="ammar.com.bookhotel.Cart">
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/relat"
        android:layout_marginBottom="20dp"
        android:id="@+id/list"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/relat"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/another"
        android:src="@mipmap/another"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pay"
        android:src="@mipmap/pay"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/another"
        />
    </RelativeLayout>
</RelativeLayout>
