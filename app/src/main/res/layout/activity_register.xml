<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/registration"
    android:background="@mipmap/booking_background"
    tools:context="ammar.com.bookhotel.Register"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/register_header"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <EditText
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Username"
            android:textSize="12dp"
            android:singleLine="true"
            android:padding="15dp"
            android:background="@mipmap/email_and_password_back"
            android:id="@+id/username"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:textSize="12dp"
            android:padding="15dp"
            android:inputType="textPassword"
            android:layout_below="@+id/age"
            android:background="@mipmap/email_and_password_back"
            android:id="@+id/password"
            />
        <EditText
            android:layout_below="@id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Enter Email Address"
            android:textSize="12dp"
            android:padding="15dp"
            android:background="@mipmap/email_and_password_back"
            android:id="@+id/email"
            />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/rooms_background"
                android:id="@+id/age"
                android:layout_below="@+id/email"
                android:hint="Age"
                android:inputType="number"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:padding="10dp"
                android:singleLine="true"
                android:maxLength="3"
                android:layout_marginLeft="30dp"
                />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:textSize="12dp"
            android:paddingTop="18dp"
            android:paddingLeft="10dp"
            android:hint="Gender"
            android:layout_below="@+id/email"
            android:layout_toRightOf="@+id/age"
            android:background="@mipmap/rooms_background"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignRight="@+id/gender"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="-13dp"
            android:background="@mipmap/mf"
            android:id="@+id/mf"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Male"
                android:id="@+id/male"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/female"
                android:textSize="12dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/male"
                android:hint="Female"
                />
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:background="@mipmap/register_button"/>
    </RelativeLayout>


</RelativeLayout>


